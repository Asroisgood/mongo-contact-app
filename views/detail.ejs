<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Kontak</h2>

      <% if (!contact) {%>
      <div class="alert alert-danger fw-bold" role="alert">
        Kontak tidak ada!<br /><a href="/contact" class="alert-link fw-normal"
          >&laquo; Back</a
        >
      </div>
      <%} else{ %>

      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.noHP %>
          </h6>
          <% if (contact.email) { %>
          <p class="card-text"><%= contact.email %></p>
          <% } else { %>
          <p class="card-text text-danger">Email tidak ditemukan</p>
          <% } %>

          <!-- <a
            href="/contact/delete/<%= contact.nama %>"
            class="btn btn-danger btn-sm float-right ml-1"
            onclick='return confirm("Anda yakin akan menghapus kontak \"<%= contact.nama %>\" dari daftar kontak?")'
            ><i class="bi bi-trash"></i> Delete</a
          > -->

          <form method="POST" action="/contact?_method=DELETE">
            <input type="hidden" name="nama" value="<%= contact.nama %>" />
            <button
              type="submit"
              class="btn btn-danger btn-sm float-right ml-1"
            >
              <i class="bi bi-trash"></i> Delete
            </button>
          </form>

          <a
            href="/contact/edit/<%= contact.nama %>"
            class="btn btn-primary btn-sm float-right"
            ><i class="bi bi-pencil-square"></i> Edit</a
          >
          <a href="/contact" class="card-link">&laquo; Back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
